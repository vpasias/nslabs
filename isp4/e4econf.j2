!
service routing protocols model multi-agent
!
vlan 22
   name CUST234
!
vlan 44
   name CUST567
!
interface Ethernet3
   switchport
!
interface Ethernet3
   switchport access vlan 44
   switchport mode access
!
interface Ethernet4
   switchport
!
interface Ethernet4
   switchport access vlan 22
   switchport mode access
!
router bgp 65100
   router-id 10.0.0.15
   maximum-paths 128 ecmp 128
   neighbor 10.0.0.13 remote-as 65100
   neighbor 10.0.0.13 update-source Loopback0
   neighbor 10.0.0.13 fall-over bfd
   neighbor 10.0.0.13 send-community standard extended
   neighbor 10.0.0.13 maximum-routes 12000
   !
   address-family evpn
      neighbor default encapsulation mpls next-hop-self source-interface Loopback0
      neighbor 10.0.0.13 activate
   !
   no address-family ipv4
      no network 10.0.0.15/32
   !
   vlan 22
      rd 10.0.0.15:234
      route-target both 65100:234
      redistribute learned
   !
   vlan 44
      rd 10.0.0.15:567
      route-target both 65100:567
      redistribute learned
   !    
!
